[Unit]
Description=Telegram Bot API server
After=network.target

[Service]
Type=simple
User=nobody
ExecStart=/opt/telegram-bot-api/telegram-bot-api --api-id=<arg> --api-hash=<arg> --local --http-port=9191 --log=/dev/null --temp-dir=/var/tmp
Restart=on-failure
RestartSec=9s
MemoryMax=infinity
TasksMax=infinity

[Install]
WantedBy=multi-user.target
